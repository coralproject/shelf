{
   "name":"comments_by_user",
   "desc":"Shows comments by user, sorted by date desc",
   "enabled":true,
   "queries":[
      {
         "name":"comments_by_user",
         "type":"pipeline",
         "collection":"comments",
         "return":true,
         "commands":[
            { "$match": { "user_id": "#objid:user_id" } },
            { "$sort": { "createDate": -1 } }
         ]
      }
   ]
}
