{
   "name":"top_commenters_by_count",
   "desc":"Shows the top 20 commenters by number of comments",
   "enabled":true,
   "queries":[
      {
         "name":"top_commenters_by_count",
         "type":"pipeline",
         "collection":"nyt_coral_comments",
         "return":true,
         "commands":[
            { "$group": { "_id": { "user_id": "$user_id" }, "comments": { "$sum": 1 } } },
            { "$sort": { "comments": -1 } },
            { "$limit": 20 }
         ]
      }
   ]
}
